{
    "name": "eril/db-tbl",
    "description": "PHP CLI tool to generate type-safe table schema classes from your database.",
    "homepage": "https://github.com/erilshackle/db-tbl-php",
    "type": "library",
    "keywords": [
        "database-schema",
        "code-generation",
        "php-cli",
        "schema",
        "database",
        "mysql",
        "pgsql",
        "sqlite",
        "pdo",
        "raw-sql",
        "development-tool"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Eril TS Carvalho",
            "homepage": "https://github.com/erilshackle",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/erilshackle/db-tbl-php/issues",
        "source": "https://github.com/erilshackle/db-tbl-php",
        "docs": "https://github.com/erilshackle/db-tbl-php#readme"
    },
    "require": {
        "php": ">=8.1",
        "ext-pdo": "*",
        "symfony/yaml": "^6.0 || ^7.0"
    },
    "autoload": {
        "psr-4": {
            "Eril\\DbTbl\\": "src/"
        }
    },
    "bin": [
        "bin/db-tbl"
    ],
    "scripts": {
        "db:generate": "db-tbl",
        "db:check": "db-tbl --check",
        "db:sync": [
            "@db:check",
            "@db:generate"
        ],
        "test": "phpunit"
    },
    "suggest": {
        "ext-yaml": "For faster YAML parsing",
        "vlucas/phpdotenv": "For .env file support"
    },
    "config": {
        "sort-packages": true
    }
}
